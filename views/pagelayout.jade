doctype 5
html(lang="en")
	head
		block meta
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(charset='utf-8')

		title= title

		block favicon
			//Favicon
			link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
			link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')

		block css
			//CSS references
			link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
			link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
			link(rel='stylesheet', href='/stylesheets/codesoar.page.css')

		block scripts
			//Javascript References
			script(type='text/javascript', src='/javascripts/jquery.js', charset='utf-8')
			script(type='text/javascript', src='/javascripts/bootstrap.min.js', charset='utf-8')

		//Google Analytics
		script(type='text/javascript')
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-40198626-1', 'codesoar.com');
			ga('send', 'pageview');
	body
	block body
		div.container-narrow
			div.masthead
				ul.nav.nav-pills.pull-right
					if (page == 'home')
						li.active
							a(href="") Home
					else
						li
							a(href="home") Home
					if (page == 'help')
						li.active
							a(href="") Help
					else
						li
							a(href="help") Help
					if (page == 'about')
						li.active
							a(href="") About
					else
						li
							a(href="about") About
				img.logo(src='/images/codesoar.png')
			hr
			block content
			hr
			div.footer
				p &copy; CodeSoar 2013
			block end